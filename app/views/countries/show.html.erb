<% content_for :js do %>
  <script>
    $(function() {
      cdb.init(function() {
        window.countries_show = new gfw.ui.view.CountriesShow({
          iso: "<%= @country['iso'] %>"
        });
      });
    });
  </script>
<% end %>

<% content_for :css do %>
  <link rel="stylesheet" href="http://libs.cartocdn.com/cartodb.js/v3/themes/css/cartodb.css" />
<% end %>

<div class="country-show">
  <div class="country-header">
    <div class="inner">
    
      <!--  colored header -->
      <div class="country-header-inner">
        <div class="country-title">
          <h1><%= @country['name'] %></h1>
          <div class="country-selector">
            <select id="areaSelector">
              <option>Select area</option>
            </select>
          </div>
        </div>

        <div class="country-details">
          <div class="country-preview">
            <div class="map" id="countryMap"></div>
            <div class="tree-numbers">
              <div class="tree-cover">
                <h4>Tree cover</h4>
                  <span class="amount"><%= extent_to_human(@country['extent'], format: '%n') %></span>
                  <span class="unit"><%= extent_to_human(@country['extent'], format: '%u', shortUnit: true) %></span>
              </div>
              <div class="total-extension">
                <h4>Total extension</h4>
                <span class="amount">851</span>
                <span class="unit">mha</span> 
              </div>
            </div>
            <div class="loss-gain-graph">
              <h4>LOSS AND GAIN (2001 - 2012)</h4>
              <div class='graph-amount'></div>
              <div class='graph-date'></div>
              <div class='frame'><div class='frame_bkg'></div></div>
            </div>
          </div>        
          <div class="country-sidenav">
            <ul>
              <li>
                <a href="#" data-source="umd_tree_loss_gain" class="info">
                  Info
                  <span class="sidenav-icon country-icons-info_inverse"></span>
                </a>
              </li>
              <li>
                <a href='http://www.earthenginepartners.appspot.com/science-2013-global-forest/download.html' target='_blank'>
                  Download data
                  <span class="sidenav-icon country-icons-download_inverse"></span>
                </a>
              </li>
              <li>
                <a href='<%= map_coords %>/grayscale/loss/596' class='action' title='Analyze forest change' target="<%= controller_name === 'embed' ? '_blank' : '' %>">
                  Analyze
                  <span class="sidenav-icon country-icons-chart_inverse"></span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!--  indepth message -->
      <% if @country['indepth'].present? %>
      <div class="country-indepth">
        <h3 class="country-indepth__title">Global Forest Watch does in-depth work in this country.</h3>
        <p class="country-indepth__body">Find more information at the Atlas Foreiester Interactif de la République Democratique Du Congo</p>
        <div class="country-indepth__links">
          <a href="">Interactive Map</a> |  
          <a href="">Report</a>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <!--  country nav -->
  <div class="country-nav-container">
    <div class="country-nav">
      <div class="inner">
        <ul class="country-nav-items">
          <li><a href="#" data-scroll-nav='0'>Forma<br>clearing alerts</a></li>
          <li><a href="#" data-scroll-nav='1'>Forest<br>type</a></li>
          <li><a href="#" data-scroll-nav='2'>State of the forest</a></li>
          <li><a href="#" data-scroll-nav='3'>People<br>& Economy</a></li>
          <li><a href="#" data-scroll-nav='4'>Tenure<br>& Laws</a></li>
          <li><a href="#" data-scroll-nav='5'>Climate Change</a></li>
          <li><a href="#" data-scroll-nav='6'>International agreements</a></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- forma alerts -->
  <section class="country-section country-alerts" data-scroll-index='0'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source="forma"><i></i></a>
        FORMA alerts
      </div>

      <div class="section-content">
        <div class="left-col">
          <h3 class="section-title">There were <span class="highlight">7,363</span> FORMA alerts in <span class="highlight">october</span></h3>

          <div class="forma-alerts-legend">
            <span class="legend-title">Forest Clearing Alerts</span>
            <span>Humid Tropics</span>
          </div>

          <a href="#" class="btn-rdn btn-rdn-primary">Download data</a>
        </div>
        <div class="right-col">
          <div class="forma-graph"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- forest type -->
  <section class="country-section country-forests-type" data-scroll-index='1'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source="extent"><i></i></a>
        Type of forests in <%= @country['name'] %>
      </div>

      <div class="section-content">
        <div class="left-col">
          <h3 class="section-title">
            <%= @country['name'] %> has <span class="highlight"><%= extent_to_human(@country['extent']).downcase %></span> hectares of tree cover
          </h3>

          <div class="forest-type-legends">
            <span class="legends-title">Forest Type:</span>
            <ul class="legends-list">
              <li><span class="regenerated"></span>Regenerated</li>
              <li><span class="primary"></span>Primary</li>
              <li><span class="planted"></span>Planted</li>
            </ul>
          </div>
        </div>
        <div class="right-col">
          <div class="forests-type-graph"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- forest produnction -->
  <section class="country-section country-production" data-scroll-index='2'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source="gross_value"><i></i></a>
        Gross production value for forests
      </div>

      <div class="section-content">
        <h3 class="section-title">
          The forestry sector contributed <span class="highlight">USD <%= gva_to_human(@country['gva'])%></span> to the economy in 2006, which is appoximately <span class="highlight"><%= @country['gva_percent'] %> of the GDP.</span>
        </h3>
      </div>
    </div>
  </section>

  <!-- employment -->
  <% if @employees.present? && @employees > 0 %>
  <section class="country-section country-employment" data-scroll-index='3'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source="employment"><i></i></a>
        Employment in forest sector
      </div>

      <div class="section-content">
        <div class="left-col">
          <% if @employees < 1000 %>
            <h3 class='section-title'><div><%= @employees %></div> <span>thousand people are directly employed by the forestry sector, according to 2006 FAO data.</span></h3>
          <% else %>
            <h3 class='section-title'><div><%= (@employees/1000.00).round(2) %></div> <span>million people are directly employed by the forestry sector, according to 2006 FAO data.</span></h3>
          <% end %>

          <ul class='employment <%= @employees < 25 ? 'short' : '' %>'>
            <li>
              <% @employees = @employees < 100 ? @employees : 100 %>
              <div class='man-list'>
                <% @employees.times do |i| %>
                  <%= image_tag 'countries/man.png' %>
                <% end %>

                <%= '...' if @employees == 100 %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <% end %>

  <!-- tenure -->
  <section class="country-section country-tenure" data-scroll-index='4'>
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source="forest_tenure"><i></i></a>
        Forest tenure
      </div>

      <div class="section-content">
        <div class='line-graph'></div>
      </div>
    </div>
  </section>

  <!-- legislation -->
  <section class="country-section country-legislation">
    <div class="inner">
      <div class="section-info">
        <a href="#" class="info" data-source="forest_legislation"><i></i></a>
        Forest policy and legislation
      </div>

      <div class="section-content">
        <a href='mailto:gfw@wri.org' class='btn-rdn'>Are we missing a link?</a>
      </div>
    </div>
  </section>

  <!-- carbon stocks -->
  <section class="country-section country-carbon-stocks" data-scroll-index='5' style="padding: 0; display: table;">
    <div class="inner">

      <!-- left col -->
      <% if @country['carbon_stocks'].present? && @country['carbon_stocks'] != 0 %>
      <div class="carbon-text <%= 'wide' unless @country['emissions'].present? && @country['emissions'] != 0 %>">
        <div class="section-info">
          <a href="#" class="info" data-source="carbon_stocks"><i></i></a>
          Carbon stocks
        </div>

        <div class="section-content">
          <h3 class='section-title'>This country has <span class="highlight"><%= number_with_delimiter(@country['carbon_stocks']) %> million metric tons of carbon stocks</span> in living forest biomass.</h3>
        </div>
      </div>
      <% end %>

      <!-- right col -->
      <% if @country['emissions'].present? && @country['emissions'] != 0 %>
      <div class="emissions-text <%= 'wide' unless @country['carbon_stocks'].present? && @country['carbon_stocks'] != 0 %>">

        <div class="section-info">
          CO2 emissions
          <a href="#" class="info" data-source="emissions"><i class="dark"></i></a>
        </div>

        <div class="section-content">
          <% if @country['emissions'] > 0 %>
            <h3 class='section-title'>According to FAO data, <span class="highlight"><%= number_to_percentage(@country['emissions'], precision: @precission) %> of GHG emissions</span> in this country came from land-use change and forestry in 2010.</h3>
          <% else %>
            <h3 class='section-title'>According to FAO data, land-use change and forestry sequestered <span class="highlight"><%= number_to_percentage(@country['emissions'].abs, precision: @precission) %> of this country’s GHG emissions</span> in 2010.</h3>
          <% end %>
        </div>
      </div>
      <% end %>

    </div>
  </section>

  <!-- conventions -->
  <section class='country-section country-conventions' data-scroll-index='6'>
    <div class='inner'>
      <div class="section-info">
        <a href="#" class="info" data-source="conventions"><i></i></a>
        Conventions
      </div>

      <div class="section-content">
        <ul>
          <% @conventions.each do |convention| %>
            <% if @country["convention_#{convention}"].present? %>
              <li class='<%= convention %>'>
                <%= t('.conventions.' + convention + '_title_html') %>
                <span><%= @country["convention_#{convention}"] %></span>
              </li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </section>

  <!-- useful links -->
  <% if @country['ministry_link'].present? || @country['external_links'].present? %>
  <section class='country-section country-external-links'>
    <div class='inner'>
      <div class="section-info">
        External links
      </div>

      <div class="section-content">
        <ul>
          <% if @country['ministry_link'].present? %>
            <li><a href='<%= @country['ministry_link'] %>' target='_blank'><%= t('.ministry_link') %></a></li>
          <% end %>

          <% if @country['external_links'].present? %>
            <% JSON.parse(@country['external_links']).each do |link| %>
              <li><%= link_to link['title'], link['url'], :target => '_blank' %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
  <% end %>

  <!-- download links -->
  <section class='country-section country-download-links'>
    <div class='inner'>
      <div class="section-content">
        <%= link_to 'Subscribe to alerts for this country', "#{map_coords}/grayscale/forma?subscribe=true", class: 'btn-rdn' %>
        <% if @country['dataset_link'].present? %>
        <%= link_to 'Download relevant data sets', @country['dataset_link'], class: 'btn-rdn' %>
        <% else %>
        <%= link_to 'Download relevant data sets','#', class: 'btn-rdn disabled' %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- blog -->
  <section class='country-section country-blog'>
    <div class='inner'>
      <div class='section-content'>
        <h3 class='section-title'><%= t('.country_blog.title', :country => @country['name'].titleize) %></h3>

        <ul class='columns'>
          <li class='column three first'>
            <% unless @blog_story.nil? %>
              <strong class='column-title'>Blog stories</strong>
              <h3 class='story-title'><%= truncate(@blog_story['title'], :length => 35) %></h3>
              <p class='story-content'><%= truncate(@blog_story['description'].gsub('[&#8230;]', ''), :length => 300) %> <%= link_to('more', @blog_story['link'], :target => '_blank') %></p>
              <p>Read more blog stories <a href='<%= "http://blog.globalforestwatch.org/?tag=#{@country['name'].downcase.gsub(' ', '_')}" %>'>here</a></p>
            <% end %>
          </li>

          <li class='column three round <%= @country['story'].present? ? '' : 'no_story' %>'>
            <div class="circle-wrapper">
              <% if @country['story'].present? %>
                <a href="<%= story_path(@country['story']['cartodb_id']) %>">
                  <img src="<%= story_image_or_map(@country['story']['media'], "#{@country['story']['lat']}, #{@country['story']['lng']}") %>" alt="<%= @country['story']['title'] %>" />
                  <div class="frame"></div>
                  <div class='gradient'></div>
                  <div class='frame'></div>
                  <div class='title'>
                    <strong><%= @country['story']['title'] %></strong>
                    <span><%= t('.home_stories.featured.read_more') %></span>
                  </div>
                </a>
              <% else %>
                <a href='<%= new_story_path %>' class='nostory'>
                  <div class='gradient'></div>
                  <div class='frame'></div>
                  <div class='title'>
                    <strong>No stories for this country yet.</strong>
                    <span>Add one</span>
                  </div>
                </a>
              <% end %>
            </div>
            <p class="see-more">See more on the <%= link_to 'map', "#{map_path}/3/15.00/27.00/ALL/580", :class => 'inline' %></p>
          </li>

          <li class='column three last'>
            <% if @mongabay_story.present? %>
              <strong class='column-title'>Mongabay stories</strong>
              <h3 class='story-title'><%= truncate(@mongabay_story['title'], :length => 35) %></h3>
              <p class='story-content'><%= truncate(@mongabay_story['description'], :length => 300) %> <%= link_to('more', @mongabay_story['loc'], :target => '_blank') %></p>
              <p>See more on the <%= link_to 'map', "#{map_path}/3/15.00/27.00/ALL/586" %></p>
            <% end %>
          </li>
        </ul>

      </div>
    </div>
  </section>

  <!-- disqus -->
  <section class='country-section country-comments'>
    <div class='inner'>
      <div id='disqus_thread'></div>
      <script type='text/javascript'>
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'gfw20'; // required: replace example with your forum shortname

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>
      <noscript>Please enable JavaScript to view the <a href='http://disqus.com/?ref_noscript'>comments powered by Disqus.</a></noscript>
    </div>
  </section>

  <div id='sources' class='sources notranslate'>
    <%= render 'shared/countries' %>
    <%= render 'shared/sources' %>
  </div>

</div>
