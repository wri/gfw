<% content_for :css do %>
  <link rel="stylesheet" href="http://libs.cartocdn.com/cartodb.js/v3/themes/css/cartodb.css" />
<% end %>

<div class="country-show">
  <!-- header -->
  <%= render 'header' %>

  <!--  indepth message -->
<!--   <% if @country['indepth'].present? %>
