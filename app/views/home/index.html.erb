<% content_for :title do
  t('.title')
end %>

<% content_for :download do %>
<div class="download">
  <div class="inner">
    <%= content_tag :h1, (raw t('layouts.application.footer.download.title', :url => "/countries")) %>
    <%= content_tag :p, (raw t('layouts.application.footer.download.data_html', :url => "/sources")) %>
</div>
</div>
<% end %>

<%= render "common/map" %>
<%= render "common/subscribe" %>
<%= render "common/analysis" %>
<%= render "common/crowdsourcing" %>

<div class="actions">
  <ul>
    <li class="community">
    <div class="icon"></div>
    <h2><%= t('.icons.community.title') %></h2>
    <p><%= t('.icons.community.text') %></p>
    <a href="https://groups.google.com/forum/?fromgroups#!forum/gfw2" class="btn community"><span><%= t('.icons.community.link') %></span></a>
    </li>

    <li class="analysis">
    <div class="icon"></div>
    <h2><%= t('.icons.analysis.title') %></h2>
    <p><%= t('.icons.analysis.text') %></p>
    <%= link_to (content_tag :span, t('.icons.analysis.link')), {}, :class => "btn analysis" %>
    </li>

    <li class="keep_updated">
    <div class="icon"></div>
    <h2><%= t('.icons.keep_updated.title') %></h2>
    <p><%= t('.icons.keep_updated.text') %></p>
    <%= link_to (content_tag :span, t('.icons.keep_updated.link')), {}, :class => "btn subscribe" %>
    </li>
  </ul>
</div>

<div class="home-stories">

  <h3>Stories behind forest clearing</h3>
  <p>Browse <%= link_to "all stories", stories_path%> or <%= link_to "submit yours", new_story_path %>. Participate in detecting forest change.</p>

  <ul>
    <% @featured.each do |story| %>
      <li>
        <%= image_tag story.main_thumbnail.try(:thumbnail_url) %>
        <div class="gradient"></div>
        <div class="title">
          <span><%= story.title %></span>
          <%= link_to 'Read more', story_path(story) %>
        </div>
      </li>
    <% end %>
  </ul>

</div>

<%= render "common/js_templates" %>
