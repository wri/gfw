#gran_chaco_deforestation{
  polygon-fill: #f265d1;
  line-color: #f265d1;
  polygon-opacity: 1;
  
  [zoom>5]{
    line-width: 0.1;
    line-opacity: 1;} 
  [zoom<6]{
    line-width: 0.05;
    line-opacity: 1;} 
  [epoch >= date_to_change]{
    polygon-fill: #FFCC00;
    line-color: #FFCC00;
    [zoom>5]{
      line-width: 0.2;
      line-opacity: 1;} 
    [zoom<6]{
      line-width: 0.4;
      line-opacity: 1;} 
    }
  
  
}
