{{#if layers}}
<header>
  <div class="alone">
    <p>Available data sets for this country:</p>
  </div>
</header>
<ul class="layers-list">
  {{#each layers}}
    <li class="layer" data-layer="{{this.slug}}" data-layeriso="{{this.iso}}">
      <span class="onoffswitch"><span></span></span>
      <span class="layer-title">{{this.title}} <a href='#' data-source='{{this.slug}}' class='source'><svg><use xlink:href="#shape-info"></use></svg></a></span>
    {{#if this.does_wrapper}}
      <span class="does_wrapper"></span>
    {{/if}}
    </li>
  {{/each}}
</ul>
{{else}}
<header>
  <div class="alone">
    <p>Country-specific datasets coming soon! </p>
    <p>For now, <a href="#" class="source" data-source="view_existing_global_data">view existing global data sets for this area,</a> <a href="/getinvolved/share-data" target="_blank">suggest your own</a>, or use the buttons below to see country-specific statistics and infographics.</p>
  </div>
</header>
{{/if}}
