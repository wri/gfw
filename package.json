{
  "name": "global-forest-watch",
  "version": "6.4.5",
  "description": "Global Forest Watch",
  "engines": {
    "node": "18.15.0"
  },
  "scripts": {
    "dev": "NODE_OPTIONS=--openssl-legacy-provider next",
    "fix": "NODE_OPTIONS=--openssl-legacy-provider yarn-audit-fix --force",
    "build": "NODE_OPTIONS=\"--max_old_space_size=8192 --openssl-legacy-provider\" next build",
    "postbuild": "NODE_OPTIONS=--openssl-legacy-provider next-sitemap",
    "start": "NODE_OPTIONS=--openssl-legacy-provider node server.js -p $PORT",
    "cy:test": "NODE_OPTIONS=--openssl-legacy-provider start-test dev 3000 cy:open",
    "cy:record": "NODE_OPTIONS=--openssl-legacy-provider cypress run --env RECORD=1",
    "cy:open": "NODE_OPTIONS=--openssl-legacy-provider cypress open",
    "cy:run": "NODE_OPTIONS=--openssl-legacy-provider cypress run",
    "pree2e": "NODE_OPTIONS=--openssl-legacy-provider rm -rf .nyc_output coverage .next || true",
    "check-coverage-limits": "nyc report --reporter=text-summary --check-coverage --statements 100",
    "lint": "eslint ./components/** ./pages/** ./layouts/** ./providers/** ./redux/** ./services/** ./utils/** -c .eslintrc.json --ext js,jsx",
    "test": "jest --watchAll",
    "test:ci": "jest --bail --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vizzuality/gfw.git"
  },
  "author": "Vizzuality <http://vizzuality.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vizzuality/gfw/issues"
  },
  "homepage": "https://www.globalforestwatch.org",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --config .stylelintrc.json",
    "*.{js,jsx}": [
      "prettier --parser flow --write --single-quote",
      "eslint --ext .js --ext .jsx --fix",
      "jest --bail --findRelatedTests --coverage --passWithNoTests"
    ]
  },
  "nyc": {
    "exclude": [
      "pages/api/__coverage__.js"
    ]
  },
